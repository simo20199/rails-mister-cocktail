     <% end %>
   </ul>
 </div>


 <div class="col-9">
  <% @cocktails.each do |cocktail| %>


    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://img.delicious.com.au/F_C2-w6_/w759-h506-cfill/del/2015/11/summer-cocktails-24374-3.jpg)">
